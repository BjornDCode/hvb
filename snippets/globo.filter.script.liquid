{{ 'globo.filter.css' | asset_url | stylesheet_tag }}<script>
  var GloboFilterConfig = {
    api: {
      filterUrl: "https://app.globosoftware.net/filter/filter"
    },
    shop: {
      name: "{{ shop.name | escape }}",
      url: "{{ shop.url }}",
      domain: "{{ shop.permanent_domain }}",
    },
    moneyFormat: "{{ shop.money_format | replace:'"',"'" }}",
    collectionId: {{ collection.id | default: 0 }},
    collectionSort: "{{ collection.default_sort_by | default: 'created-descending' }}",
    no_image_url: "{{ 'no-image.gif' | asset_url }}",
    filter_class: "gf-left swatch-round"
  };
</script>

<!-- Include Resources -->
{{ 'v3.globo.filter.lib.js' | asset_url | script_tag }}
<!-- Initialize App -->
<script>
  var globofilter = new GloboFilter();
  globofilter.init();
</script>

<!-- Initialize & Customize Filter -->
{% if template contains 'collection' %}
<script>globofilter.initFilter();</script>
{% endif %}
