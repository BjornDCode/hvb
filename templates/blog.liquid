<div class="blog">
	<h1>Blog</h1>
	{% for article in blog.articles %}
	<div class="container narrow">
		<a href="{{ article.url }}" class="article-brief" target="_blank">
			<img src="{% if article.image %}{{ article | img_url: 'large' }}{% endif %}">

			<p class="published-on"> {{ article.published_at | date: "%B %d, %Y" }}</p>
			<h4> {{ article.title }}</h4>
				<p class="article-brief-text">
					{{ article.excerpt }}
				</p>
				<p class="read-more"> Read more </p>
		</a>

	</div>
	{% include "seperator" %}
	{% endfor %}

</div>

<style type="text/css">

	.blog .seperator {
		margin-bottom: 50px;
	}

	.article-brief img {
		margin-bottom: 30px;
	}
	.published-on{
		padding: 0;
		font-family: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
		font-style: italic;
		font-weight: 300;
		padding-bottom: 10px;
	}
	p{
		padding-bottom: 10px;
		margin: 0;
		font-family: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	}
	h4{
		padding-bottom: 30px;
	}
	.article-brief-text{
		font-family: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
		padding-bottom: 30px;
	}
	.read-more{
		display: block;
		font-style: italic;
		font-weight: 300;
		text-transform: uppercase;
		text-decoration: underline;
		margin-bottom: 50px;
		text-align: right;
	}
	.blog-seperator{
		margin-bottom: 50px;
	}
</style>
